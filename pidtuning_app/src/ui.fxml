<?xml version="1.0" encoding="utf-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane fx:id="parent" fx:controller="Controller"
    xmlns:fx="http://javafx.com/fxml">
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
    <left>
    <VBox id="side-bar" spacing="20" alignment="center">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        
        <VBox spacing="10">
            <Text id="entry-name-text" text="Network Table Entry Name"/>
            <HBox spacing="10" >
                <TextField fx:id="nameField" prefWidth="0"
                    HBox.hgrow="always"/>
                <Button text="Set" onAction="#setEntryName"/>
            </HBox>
        </VBox>
    
        <GridPane  hgap="10" vgap="10">
            <Label text="P"
                GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="pField"
                GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
            <Label text="I"
                GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="iField"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    
            <Label text="D"
                GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="dField"
                GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
            <HBox spacing="10" alignment="bottom_right"
                GridPane.columnIndex="0" GridPane.rowIndex="6"
                GridPane.columnSpan="2">
                <Button text="Send" onAction="#sendPIDData"/>  
            </HBox>
        </GridPane>
        
        <VBox spacing="10">
            <Text id="setpoint-text" text="Setpoint"/>
            <TextField fx:id="setpointField" prefWidth="0"/>
            <HBox spacing="10" alignment="bottom_right">
                <Button fx:id="startBtn" styleClass="green" text="Start" onAction="#toggleTuning"/>
            </HBox>
        </VBox>
        
    </VBox>
    </left>
    
</BorderPane>
